@page "/"
@using Microsoft.AspNetCore.Components.Web
@using HttpSecurity.AspNetCore
@namespace HttpSecurity.Example.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IHttpSecurityService HttpSecurityService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link nonce="@HttpSecurityService.GetNonce()" rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link nonce="@HttpSecurityService.GetNonce()" href="css/site.css" rel="stylesheet" />
    <link nonce="@HttpSecurityService.GetNonce()" href="HttpSecurity.Example.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script nonce="@HttpSecurityService.GetNonce()" src="_framework/blazor.server.js"></script>
</body>
</html>
